<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- AUTHENTICATION -->
  <servers>
    <server>
      <id>nextwork-nextwork-devops-cicd</id>
      <username>aws</username>
      <password>${env.CODEARTIFACT_AUTH_TOKEN}</password>
    </server>
  </servers>

  <!-- ROUTE EVERYTHING (DEPENDENCIES + PLUGINS) THROUGH CODEARTIFACT -->
  <mirrors>
    <mirror>
      <id>nextwork-nextwork-devops-cicd</id>
      <name>NextWork CodeArtifact</name>
      <url>https://nextwork-006834263464.d.codeartifact.us-east-1.amazonaws.com/maven/nextwork-devops-cicd/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>

  <!-- PROFILE -->
  <profiles>
    <profile>
      <id>nextwork-nextwork-devops-cicd</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>

      <repositories>
        <repository>
          <id>nextwork-nextwork-devops-cicd</id>
          <url>https://nextwork-006834263464.d.codeartifact.us-east-1.amazonaws.com/maven/nextwork-devops-cicd/</url>
        </repository>
      </repositories>

      <pluginRepositories>
        <pluginRepository>
          <id>nextwork-nextwork-devops-cicd</id>
          <url>https://nextwork-006834263464.d.codeartifact.us-east-1.amazonaws.com/maven/nextwork-devops-cicd/</url>
        </pluginRepository>
      </pluginRepositories>

    </profile>
  </profiles>

</settings>
